{
  "name": "js-node",
  "version": "1.0.0",
  "description": "ES Node Template",
  "scripts": {
    "build": "npm run clean && babel ./src -d ./dist --ignore node_modules",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.js\"",
    "start": "nodemon src/main.js --exec babel-node"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "babel-eslint": "^10.0.1",
    "babel-preset-airbnb": "^3.2.1",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": "npm run lint -- --quiet"
  }
}
